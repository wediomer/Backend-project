<!DOCTYPE html>
<html>
<head>
  <title>Comments</title>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body class="text-align: center">
<div style="margin-left: 100px;">
  <div class="container bg-warning border btn m-5 ">
    <div class="container bg-primary m-2 mt-5">
      <%- include('navbar', { currentPage: 'comments' }) %>
      
      <h1 style="text-align: center; padding: 40px;">Post</h1>
      
      <% if (post) { %>
        <div class="card mb-3 bg-warning">
          <div class="card-body" style="text-align: center; padding: 40px;">
            <h5 class="card-title"><strong>Title:</strong> <%= post.title %></h5>
  
            <div class="d-inline p-5 m-lg-4">
             
            </div>
            <p class="card-text"><strong>Content:</strong> <%= post.content %></p>
            <p class="card-text"><strong>Created At:</strong> <%= post.createdAt %></p>
            <p class="card-text"><strong>Updated At:</strong> <%= post.updatedAt %></p>
            <form action="/deletePost/<%= post._id %>" method="post" style="display: inline;">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            
            <a href="/editBlog/<%= post._id %>" class="btn btn-primary">Edit</a>
          </div>
        </div>
      <% } else { %>
        <p>Post not found.</p>
      <% } %>
    </div>
  
    <div class="container">
      <h4>Comments</h4>
      <% if (comments.length === 0) { %>
        <p>No comments found for this post.</p>
      <% } else { %>
        <% comments.forEach((comment) => { %>
          <div class="card mb-3">
            <div class="card-body">
              <h6 class="card-subtitle mb-2 text-muted"><strong>Author:</strong> <%= comment.author %></h6>
              <p class="card-text"><strong>Content:</strong> <%= comment.content %></p>
            </div>
          </div>
        <% }) %>
      <% } %>
    
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Add a Comment</h5>
          <form action="/comments/<%= post._id %>" method="post">
            <div class="form-group">
              <textarea class="form-control" name="content" placeholder="Enter your comment" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
</div>
  
  

  <!-- Include Bootstrap JS and jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
